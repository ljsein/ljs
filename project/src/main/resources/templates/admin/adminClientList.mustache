         <div class="table-responsive text-center">

            <table class="table table-layout: fixed" id="table" width="100%"
               data-pagination="true" data-page-number="1" data-toggle="table"
               cellspacing="0" data-filter-control="true"
               data-show-search-clear-button="true" data-sort-class="table-active"
               data-sortable="true">
               <!-- table-layout: fixed = 테이블 행 width 고정  -->


               <thead class="table-dark">

                  <h1>회원관리</h1>
                  <tr class="text-center">
                     <th width="3%" data-field="client_id" data-filter-control="input"
                        data-sortable="true">아이디</th>
                     <!-- width 설정은 본인이 알아서 설정 -->
                     <th width="10%" data-field="client_name"
                        data-filter-control="input" data-sortable="true">이름</th>
                     <th width="10%" data-field="client_email"
                        data-filter-control="input" data-sortable="true">이메일</th>
                     <th width="5%" data-field="client_statename"
                        data-filter-control="select" data-sortable="true">회원상태</th>
                     <th width="5%" data-field="client_state"
                        data-filter-control="select">회원관리</th>

                  </tr>
               </thead>


               <tbody class="table-hover">
                  {{#list}}
                  <tr class="text-left">

                     <td style="border-right: 1px solid white; text-align: center;">{{client_id}}</td>
                     <td style="border-right: 1px solid white; text-align: center;">{{client_name}}</td>
                     <td style="border-right: 1px solid white; text-align: center;">{{client_email}}</td>


                     <td id="client_statename{{client_seq}}"
                        style="border-right: 1px solid white; text-align: center;">
                        {{client_statename}}</td>
                     <td style="text-align: center;"><select name="client_state"
                        id="client_stateop"
                        onchange="mState(this.value,'{{client_id}}','{{client_seq}}')">
                           <option value="">{{client_statename}}</option>
                           <option value="1">계정정지</option>
                           <option value="0">계졍사용</option>
                     </select></td>
                  </tr>

                  {{/list}}

               </tbody>

            </table>

         </div>
      </div>

   </div>
         {{/adminId}}
</div>
