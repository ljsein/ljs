<script type="text/javascript">
      function mState(value,client_id,client_seq){         
         var client_state = value;
      
         if(client_state == 0){
            $("#client_statename"+client_seq).text("계정사용");
         
         }else {
            $("#client_statename"+client_seq).text("계정정지");
            
         }
         
         $.ajax({
             type : "get",
             url : "/admin/adminClientState",
             data : { "client_id" : client_id , "client_state" : client_state},
             success : function(result){
                console.log("result : " + result);
             }
           });   
       }
</script>


