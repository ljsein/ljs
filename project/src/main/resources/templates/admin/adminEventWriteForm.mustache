	<script type="text/javascript">
   function eventWrite(){
      var frm = document.form1;
      if(!frm.event_startdate.value){
         alert("시작 날짜를 입력해주세요");
         frm.event_startdate.focus();
         return false;
         
      }
      if(!frm.event_enddate.value){
         alert("마지막 날짜를 입력해주세요");
         frm.event_enddate.focus();
         return false;
         
      }
      frm.submit();
   }
   
   
   </script>

	<script>
   
   function loadFile(input) {
	    var file = input.files[0];

	    if (file) {
	        var reader = new FileReader();

	        reader.onload = function(event) {
	            $("#event_image").attr("src", event.target.result);
	        };

	        reader.readAsDataURL(file);
	    }
	}
        

   $(document).ready(function() {
	    $("#fileUpload").on('change', function() {
	        if (window.FileReader) {
	            $(this).siblings('.event_image').val(this.files[0].name);
	        }
	    });
	});
      
   $(document).ready(function() {
	    $('.filebox .upload-hidden').on('change', function() {
	        if (window.FileReader) {
	            $(this).siblings('.event_image').val(this.files[0]?.name);
	        }
	    });
	}); 

         
