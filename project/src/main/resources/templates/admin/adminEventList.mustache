<body>

{{>layouts/adminheader}}

<div class="hero">
      {{#adminId}}
<div class="col-xl-4" style="margin:10px;"><button  class="btn" onclick="location.href='/admin/adminEventWriteForm'">이벤트등록</button></div>
   <div class="card shadow mb-4">

      <div class="card-body">
         <div class="table-responsive text-center">
			
            <table class="table table-layout: fixed" id="table" width="100%"
               data-pagination="true" data-page-number="1" data-toggle="table"
               cellspacing="0" data-filter-control="true"
               data-show-search-clear-button="true" data-sort-class="table-active"
               data-sortable="true">
               <!-- table-layout: fixed = 테이블 행 width 고정  -->
				

               <thead class="table-dark">

                  <h1>이벤트관리</h1>
                  <tr class="text-center">
                     <th width="3%" data-field="event_imagecode" data-filter-control="input"
                        data-sortable="true">이미지</th>
                     <!-- width 설정은 본인이 알아서 설정 -->
                     <th width="10%" data-field="event_image"
                        data-filter-control="input" data-sortable="true">이미지이름</th>
                     <th width="10%" data-field="event_startdate"
                        data-filter-control="input" data-sortable="true">시작날짜</th>
                     <th width="10%" data-field="event_enddate"
                        data-filter-control="input" data-sortable="true">마지막날짜</th>
                     <th width="5%" data-field="client_statename"
                        data-filter-control="select" data-sortable="true">이벤트상태</th>

                  </tr>
               </thead>

               <tbody class="table-hover">
                  {{#list}}
                  <tr class="text-left">

                     <td style="border-right: 1px solid white; text-align: center; "><img width="100px" height="100" src="../flieUpload/{{event_imagecode}}"  ></td>
                     <td style="border-right: 1px solid white; text-align: center;">{{event_image}}</td>
                     <td style="border-right: 1px solid white; text-align: center;">{{event_startdate}}</td>
                     <td style="border-right: 1px solid white; text-align: center;">{{event_enddate}}</td>

					<td style="border-right: 1px solid white; text-align: center;">
                        <button  class="btn_view" onclick="location.href='/admin/adminEventModifyForm?event_imagecode={{event_imagecode}}'">수정하기</button>
                        <button  class="btn_view" onclick="location.href='/admin/adminEventDelete?event_imagecode={{event_imagecode}}'">삭제하기</button>
                    </td>           
                  </tr>
                  {{/list}}

               </tbody>

            </table>

         </div>
      </div>
   </div>
         {{/adminId}}
</div>
